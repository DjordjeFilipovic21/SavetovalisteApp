<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="app.controller.SignUpPageController" stylesheets="@../css/light-theme.css">
    <center>
        <VBox fx:id="contentArea" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER">
            <Label text="Sign Up" style="-fx-font-size: 40px; -fx-font-weight: bold;"/>
            <TextField fx:id="usernameField" promptText="Username" maxWidth="300" style="-fx-font-size: 16px; -fx-padding: 10;"/>
            <TextField fx:id="emailField" promptText="Email" maxWidth="300" style="-fx-font-size: 16px; -fx-padding: 10;"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300" style="-fx-font-size: 16px; -fx-padding: 10;"/>
            <Button text="Sign Up" onAction="#onSignUp"/>
        </VBox>
    </center>
</BorderPane>